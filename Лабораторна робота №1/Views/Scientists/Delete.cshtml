@model Lab1_Scientists_And_Publications.Scientist

@{
    ViewData["Title"] = "Видалення науковця";
}

<h1>Видалення науковця</h1>

<h3>Ви впевнені, що хочете видалити цього науковця з бази даних?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FullName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FullName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DateOfBirth)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DateOfBirth)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ScienceDegree)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ScienceDegree)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Department)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Department.Id)
